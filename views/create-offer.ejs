<!DOCTYPE HTML>
<html lang="pl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ENTERPRISEWEB</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main_style.css">
    <script src="https://use.fontawesome.com/aac5c45839.js"></script>
</head>

<body onload="enableEditMode();">
    <div class="navbar-findcond">
        <div class="cover-container d-flex h-50 p-3 mx-auto flex-column">
            <header class="masthead mb-auto">
                <div class="inner">
                    <a href="/profile"> <img class="img-logo" src="/images/image_enterpriseweb.png" alt="Enterpriseweb"> </a>
                    <nav class="nav nav-masthead justify-content-left"> <a class="nav-link" href="/contractors">Kontrahenci</a> <a class="nav-link" href="edit-profile/data-company">Firma</a> <a class="nav-link" href="/logout">Wyloguj</a> </nav>
                    <nav class="nav nav-masthead justify-content-left">
                        <h4 class="nav-user">Jesteś zalogowany jako: <%=user.email %></h4> </nav>
                </div>
            </header>
        </div>
    </div>
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Miejscowość</label>
                        <input type="text" class="form-control" placeholder="Miejscowość"> </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Data</label>
                        <input type="text" id="currentDate" class="form-control"> </div>
                </div>
            </div>
            <div class="wrapper-body">
                <div class="row">
                    <div class="col-lg-2">
                        <blockquote> <span class="col-form-legend blockquote format-text">Nabywca</span> </blockquote>
                    </div>
                    <div class="col-lg-10">
                        <h5>Wypełnił poprawnie wszystkie pola, za pomocą przycisku "Dodaj" zapisz dane nabywcy.</h5> </div>
                </div>
            </div>
            <iframe style="width:0; height:0; border:0; border:none" name="transFrame" id="transFrame"></iframe>
            <form target="transFrame" method="POST" action="/contractors/save" class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Nazwa firmy</label>
                        <input type="text" name="nameContractor" id="contractorCompany" class="form-control" placeholder="Nazwa firmy">
                        <div class="error-contractorCompany"></div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Adres</label>
                        <input type="text" name="addressContractor" id="contractorAddress" class="form-control" placeholder="Adres">
                        <div class="error-contractorAddress"></div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Kod pocztowy</label>
                        <input type="text" name="zipCodeContractor" id="contractorZipCode" class="form-control" placeholder="Kod pocztowy">
                        <div class="error-contractorZipCode"></div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Miejscowość</label>
                        <input type="text" name="cityContractor" id="contractorCity" class="form-control" placeholder="Miejscowość">
                        <div class="error-contractorCity"></div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Numer NIP</label>
                        <input type="text" name="idNumberContractor" id="contractorNumberCompany" class="form-control" placeholder="NIP">
                        <div class="error-contractorNumberCompany"></div>
                    </div>
                </div>
                <div class="col-lg-12 text-center">
                    <button class="submit" type="submit" id="sendProfile">Dodaj</button>
                </div>
            </form>
        </div>
        <div class="row container-main">
            <div class="content">
                <div class="col-lg-12 text-center">
                    <div>
                        <button title="Pogrubiona" data-placement="bottom" class="button-font" onclick="execCmd('bold');"><i class="fa fa-bold"></i></button>
                        <button title="Kursywa" data-placement="bottom" class="button-font" onclick="execCmd('italic');"><i class="fa fa-italic"></i></button>
                        <button title="Podkreślenie" data-placement="bottom" class="button-font" onclick="execCmd('underline');"><i class="fa fa-underline"></i></button>
                        <button title="Przekreślenie" data-placement="bottom" class="button-font" onclick="execCmd('strikeThrough');"><i class="fa fa-strikethrough"></i></button>
                        <button title="Wyrównaj do lewej" data-placement="bottom" class="button-font" onclick="execCmd('justifyLeft');"><i class="fa fa-align-left"></i></button>
                        <button title="Wyśrodkuj" data-placement="bottom" class="button-font" onclick="execCmd('justifyCenter');"><i class="fa fa-align-center"></i></button>
                        <button title="Wyrównaj do prawej" data-placement="bottom" class="button-font" onclick="execCmd('justifyRight');"><i class="fa fa-align-right"></i></button>
                        <button title="Wyjustuj" data-placement="bottom" class="button-font" onclick="execCmd('justifyFull');"><i class="fa fa-align-justify"></i></button>
                        <button title="Wytnij" data-placement="bottom" class="button-font" onclick="execCmd('cut');"><i class="fa fa-cut"></i></button>
                        <button title="Copiuj" data-placement="bottom" class="button-font" onclick="execCmd('copy');"><i class="fa fa-copy"></i></button>
                        <button title="Akapit" data-placement="bottom" class="button-font" onclick="execCmd('indent');"><i class="fa fa-indent"></i></button>
                        <button title="Usuń akapit" data-placement="bottom" class="button-font" onclick="execCmd('outdent');"><i class="fa fa-dedent"></i></button>
                        <button title="Indeks dolny" data-placement="bottom" class="button-font" onclick="execCmd('subscript');"><i class="fa fa-subscript"></i></button>
                        <button title="Indeks górny" data-placement="bottom" class="button-font" onclick="execCmd('superscript');"><i class="fa fa-superscript"></i></button>
                        <button title="Cofnij" data-placement="bottom" class="button-font" onclick="execCmd('undo');"><i class="fa fa-undo"></i></button>
                        <button title="Ponów" data-placement="bottom" class="button-font" onclick="execCmd('redo');"><i class="fa fa-repeat"></i></button>
                        <button title="Lista wypunktowana" data-placement="bottom" class="button-font" onclick="execCmd('insertUnorderedList');"><i class="fa fa-list-ul"></i></button>
                        <button title="Lista numeryczna" data-placement="bottom" class="button-font" onclick="execCmd('insertOrderedList');"><i class="fa fa-list-ol"></i></button>
                        <button title="Dodaj akapit" data-placement="bottom" class="button-font" onclick="execCmd('insertParagraph');"><i class="fa fa-paragraph"></i></button>
                        <button title="Linia" data-placement="bottom" class="button-font" onclick="execCmd('insertHorizontalRule');"><i class="fa fa-minus"></i></button>
                        <br/><i class="fa fa-font button-font" title="Linia" data-placement="bottom"></i>
                        <select class="button-input" onchange="execCommandWidthArg('fontName', this.value);">
                            <option value="Arial">Arial</option>
                            <option value="Comic Sans MS">Comic Sans MS</option>
                            <option value="Courier">Courier</option>
                            <option value="Georgia">Georgia</option>
                            <option value="Tahoma">Tahoma</option>
                            <option value="Times New Roman">Times New Roman</option>
                            <option value="Verdana">Verdana</option>
                        </select><i class="fa fa-text-height button-font" title="Rozmiar czcionki" data-placement="bottom"></i>
                        <select class="button-input" onchange="execCommandWidthArg('fontSize', this.value);">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                        </select> <i class="fa fa-paint-brush button-font" title="Kolor czcionki" data-placement="bottom"></i>
                        <input class="button-font" type="color" onchange="execCommandWidthArg('foreColor', this.value);" />
                        <button class="button-selectAll" onclick="execCmd('selectAll');"><b>Zaznacz wszystko</b></button>
                    </div>
                    <iframe name="richTextField" style="width: 100%; height: 600px;"></iframe>
                    <div class="col-lg-12 text-center">
                        <button type="button" class="btn btn-success">Zapisz</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer> &copy; Copyright 2018, Enterpriseweb </footer>
    <script>
        n = new Date().toLocaleDateString();
        document.getElementById("currentDate").value = n + "r.";
    </script>
    <script>
        var showingSourceCode = false;
        var isInEditMode = true;

        function enableEditMode() {
            richTextField.document.designMode = 'On';
        }

        function execCmd(command) {
            richTextField.document.execCommand(command, false, null);
        }

        function execCommandWidthArg(command, arg) {
            richTextField.document.execCommand(command, false, arg);
        }

        function toggleSource() {
            if (showingSourceCode) {
                richTextField.document.getElementsByTagName('body')[0].innerHTML = richTextField.document.getElementsByTagName('body')[0].textContent;
                showingSourceCode = false;
            } else {
                richTextField.document.getElementsByTagName('body')[0].textContent = richTextField.document.getElementsByTagName('body')[0].innerHTML;
                showingSourceCode = true;
            }
        }
    </script>
    <script>
        $(document).ready(function() {
            $(".button-font").tooltip();
        });
    </script>
    <script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="js/validation.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>